generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  nombre       String
  apellido     String
  calorias     Int      @default(0) // Nuevas propiedades
  entrenamientos Int     @default(0) // Nuevas propiedades
  minutos      Int      @default(0) // Nuevas propiedades
}

model Routine {
  id       Int       @id @default(autoincrement())
  name     String
  image    String
  exercises Exercise[] @relation("RoutineExercises")
}

model Exercise {
  id       Int     @id @default(autoincrement())
  name     String
  image    String
  sets     Int
  routineId Int      // Clave for√°nea
  routine  Routine @relation("RoutineExercises", fields: [routineId], references: [id])
}
